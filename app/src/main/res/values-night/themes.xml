<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Etali" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color</item>
        <item name="android:statusBarColor">#108A53</item>
        <item name="android:windowSplashScreenBackground">@color/color</item>
        <!-- <item name="android:windowBackground">@color/color</item> -->
    </style>

    <!-- Define custom popup menu style -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

</resources>